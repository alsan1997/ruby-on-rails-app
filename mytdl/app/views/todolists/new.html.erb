<%= form_with scope: :todolist, url: todolists_path, local: true do |form| %>

  <% if @todolist.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@todolist.errors.count, "error") %> prohibited
        this tdl from being saved:
      </h2>
      <ul>
        <% @todolist.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <p>
    <%= form.label :tdl, 'To-do list' %><br>
    <%= form.text_field :tdl %>
  </p>
 
  <p>
    <%= form.submit 'Add to my tdl!' %>
  </p>
<% end %>

